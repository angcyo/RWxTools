<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/base_tran_round_shape_6"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/base_ldpi">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/text_view"
        style="@style/BaseDarkTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_ldpi"
        android:textColor="@color/base_white"
        android:textSize="12dp"
        tools:text="程序名"/>

    <com.angcyo.uiview.widget.Button
        android:id="@+id/add_button"
        style="@style/BaseSkinButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_ldpi"
        android:paddingBottom="1dp"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:paddingTop="1dp"
        android:text="加入过滤"
        android:textSize="12dp"/>

</LinearLayout>